<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.HistoryActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Il y a une semaine"
        android:background="#089ad4"

        android:layout_weight="1"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Il y a 6 jours"
        android:background="#8df115"

        android:layout_weight="1"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Il y a 5 jours"
        android:background="#a022c6"

        android:layout_weight="1"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Il y a 4 jours"
        android:background="#e65117"

        android:layout_weight="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Il y a 3 jours"
        android:background="#7044f5"

        android:layout_weight="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avant-hier"
        android:background="#fffb02"

        android:layout_weight="1"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Hier"
    android:background="#ef0c0c"

    android:layout_weight="1"
    />

</LinearLayout>