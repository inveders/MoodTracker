<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context=".Controller.HistoryActivity"
     android:orientation="vertical"
     android:weightSum="7"
    android:id="@+id/linearLayout">


    <RelativeLayout
        android:id="@+id/relative_oneWeek"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#089ad4">

        <TextView
            android:id="@+id/text_oneWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il y a une semaine" />

        <ImageButton
            android:id="@+id/comment_oneWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_sixDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#8df115"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_sixDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il y a 6 jours"
            />

        <ImageButton
            android:id="@+id/comment_sixDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_fiveDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#a022c6"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_fiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il y a 5 jours"
            />

        <ImageButton
            android:id="@+id/comment_fiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_fourDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#e65117"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_fourDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il y a 4 jours"
            />

        <ImageButton
            android:id="@+id/comment_fourDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_threeDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#7044f5"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_threeDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il y a 3 jours"
            />

        <ImageButton
            android:id="@+id/comment_threeDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_beforeYesterday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fffb02"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_beforeYesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avant-hier"
            />

        <ImageButton
            android:id="@+id/comment_beforeYesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_yesterday"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ef0c0c"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier" />

        <ImageButton
            android:id="@+id/comment_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:visibility="invisible"
            />

    </RelativeLayout>


</LinearLayout>

